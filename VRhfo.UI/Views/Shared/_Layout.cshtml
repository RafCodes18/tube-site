            .sub-link-item {
                font-size: 14px; /* Reduce font size for smaller screens */
                margin-left: 20px; /* Reduce spacing between links */
            }

            .lik-box{
                margin: 0 !important;
                padding: 0 !important;
            }

            .page-title{
                display: none;
            }
            
        }

        @@media (max-width: 715px) {
            .sub-link-item {
