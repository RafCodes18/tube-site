                margin-right: 20px;
            }

            .navbar-nav .nav-link {
                margin-left: auto;
            }

        /* change button color to pink and search box width */
        .btn-outline-primary {
            color: #ff69b4;
            border-color: #ff69b4;
        }

            .btn-outline-primary:hover {
                background-color: #ff69b4;
                color: white;
                border: hidden;
            }

        .form-control {
            width: 400px; /* change this as per your requirement */
        }
        /* reduce space between links */
        .navbar-nav .nav-item {
            margin-left: 10px; /* change this as per your requirement */
        }

        .nav-item .search {
            max-width: 50%;
            margin: 50% auto;
        }

        .custom-search {
            position: relative;
            width: 100%;
            background-color: black;
            border: 1px solid hotpink;
            padding: 8px 20px;
        }

        .join-now {
            position: relative;
            top: 3px;
            color: black !important;
            font-weight: bold;
            border-radius: 4px;
            width: 110px;
            text-align: center;
            height: 34px;
            background-image: linear-gradient(to right, lightblue, #FF2969);
        }

