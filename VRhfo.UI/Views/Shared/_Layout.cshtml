            }

            .nav-link{
                padding: 0;
            }
            .goggles{
                display: none;
            }
        }
            .goggles{
                margin-top: 10px;
            }
            .searchbar{
                width: 100%;
            }
            @@media (max-width: 1001px){
                .navbar-nav{
                    height: 40px !important;
                }
                .searchbar{
                    margin: 0;
                    padding: 0;
                    margin-top: -10px;
                    margin-bottom: 5px !important;
                    min-width: 100px;
