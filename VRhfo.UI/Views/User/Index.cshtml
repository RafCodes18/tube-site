@model VRhfo.BL.Models.User 
@{
    ViewData["Title"] = "Index";
}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">
<div class="profile-container">
    <div class="container">
        <!-- Profile Header -->
        <div class="profile-header">
            <div class="profile-info">
                <div class="avatar">
                    @Model.AvatarLetter
                </div>
                <div class="user-details">
                    <h1>@@@Model.Username</h1>
                    <div class="user-meta">
                        <div class="meta-item">
                            <div class="meta-label">Joined</div>
                            <div class="meta-value">Jul 04, 2025</div>
                        </div>
                        <div class="meta-item tier-premium">
                            <div class="meta-label">Tier</div>
                            <div class="meta-value">@Model.Subscription_Tier</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Streak Display -->
            <div class="streak-display">
                <div class="streak-number">15</div>
                <div class="streak-label">Day Streak 🔥</div>
            </div>

            <!-- Stats Grid -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-value">2h 34m</div>
                    <div class="stat-label">Today</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value">5h 12m</div>
                    <div class="stat-label">This Week</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value">23h</div>
                    <div class="stat-label">This Month</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value">234h</div>
                    <div class="stat-label">Lifetime</div>
                </div>
            </div>
        </div>

        <!-- Content Grid -->
        <div class="content-grid">
            <!-- Profile Badges -->
            <div class="content-section">
                <div class="section-title">
                    <div class="section-icon">🏆</div>
                    Profile Badges
                </div>
                <div class="badges-grid">
                    <div class="badge-item">
                        <div class="badge-container">
                            <div class="badge badge-1min">
                                <div class="badge-content">
                                    <div class="watch-time-label">WATCH TIME</div>

                                    <svg class="hologram-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <circle cx="12" cy="12" r="10" stroke="#00ccff" stroke-width="1.5" />
                                        <path d="M12 6v6l4 2" stroke="#00ffff" stroke-width="2" />
                                    </svg>
                                    <div class="badge-title">1 MINUTE</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="badge-item">
                        <div class="badge-container">
                            <div class="badge badge-3hour not-achieved">
                                <div class="badge-content">
                                    <svg class="hologram-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <circle cx="12" cy="12" r="10" stroke="#8b4513cc" stroke-width="1.5" />
                                        <path d="M12 6v6l4 2" stroke="#8b4513cc" stroke-width="2" />
                                    </svg>
                                    <div class="badge-title">30 MINUTES</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="badge-item">
                        <div class="badge-container">
                            <div class="badge badge-6hour not-achieved">
                                <div class="badge-content">
                                    <svg class="hologram-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <circle cx="12" cy="12" r="10" stroke="#c0c0c0cc" stroke-width="1.5" />
                                        <path d="M12 6v6l4 2" stroke="#c0c0c0cc" stroke-width="2" />
                                    </svg>
                                    <div class="badge-title">1 HOUR</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="badge-item">
                        <div class="badge-container">
                            <div class="badge badge-9hour  ">
                                <div class="badge-content">
                                    <svg class="hologram-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" stroke="#3182ce" />
                                        <circle cx="12" cy="12" r="3" stroke="#4299e1" />
                                    </svg>
                                    <div class="badge-title">10 HOURS</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="badge-item">
                        <div class="badge-container">
                            <div class="badge badge-24hour  ">
                                <div class="badge-content">
                                    <svg class="hologram-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" stroke="#4299e1" />
                                        <circle cx="12" cy="12" r="3" stroke="#63b3ed" />
                                        <path d="M9 12l2 2 4-4" stroke="#90cdf4" />
                                    </svg>
                                    <div class="badge-title">24 HOURS<br>ELITE</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="badge-item">
