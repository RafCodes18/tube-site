<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

<div class="main-pg">
    <div class="page-title">
        <p class="titl">favorites <img src="~/img/Yd60cw01.svg" height="40px" width="40px"/></p>
    </div>
    <div class="card-container">
        @foreach (var item in Model.Videos)
        {
            <div class="card" data-video-id="@item.Id">
                <a asp-controller="Video" asp-action="Watch" asp-route-title="@item.Title.Replace(' ', '-')">
                    <div class="card-img">

                        <img class="vid-img" src="~/img/astro.jpg" alt="@item.Title" style="width: 100%;">
                        <div class="time-container">
                            <img src="~/img/clock2.png" height="13" width="13" class="clock-img">
                            <p class="card-time"> @item.FormattedDuration  </p>
                        </div>

                        
                    </div>

                    <div class="description">
                        <div class="d-top-row">
                            <h5 class="vid-title"> @item.Title </h5>
                            <p>
                                <img src="~/img/heart.svg" alt="Heart Icon" height="13" width="13">
                                @item.FormattedLikes
                            </p>
                        </div>
                        <div class="d-bottom-row">
                            <p>@item.Category</p>
                            @item.FormattedUploadDate
                        </div>
                    </div>
                </a>
                <button class="likebutton" onclick="document.getElementById('remove-fave-modal').style.display='block'">
                    <div class="likeL like-yes" data-video-id="@item.Id"></div>
                </button>

                <div id="remove-fave-modal" class="w3-modal ">
                    <div class="w3-modal-content modal-main">
                        <div class="w3-container modal-contain">
                            <span onclick="document.getElementById('remove-fave-modal').style.display='none'" class="w3-button w3-display-topright custom-x">&times;</span>
                            <p class="modal-question"> Remove from your favorites?</p>
                            <div class="modal-options">
                                <p id="modal-yes" class="modal-yes">Yes</p>
                                <p id="modal-no" class="modal-no">No</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }


    </div>
</div>

<script type="text/javascript">

    const likeButtons = document.querySelectorAll('.likeL');
    const currentUser = @Html.Raw(Json.Serialize(ViewBag.CurrentUser)); // Access the user from the ViewBag
    console.log(currentUser?.username + " " + currentUser?.id);

    likeButtons.forEach(button => {
        button.addEventListener('click', (event) => {
            const videoId = button.getAttribute('data-video-id');
            document.getElementById('modal-yes').dataset.videoId = videoId; // Set videoId in "Yes" button dataset
        });
    });

    document.getElementById('modal-yes').addEventListener('click', () => {
        const videoId = document.getElementById('modal-yes').dataset.videoId;

        // Proceed with unliking the video
        fetch(`/Video/Unlike/${videoId}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': getAntiForgeryToken() // Include anti-forgery token
            },
            body: JSON.stringify({ videoId }) // Pass post ID in the request body
        })
            .then(response => response.json())
            .then(data => {
                console.log("Like count: " + data.likeCount);

                // REMOVES CARD ELEMENT ON UI AFTER SUCCESSFULLY DELETE IN DB
                const card = document.querySelector(`.card[data-video-id="${videoId}"]`);
                if (card) {
                    card.remove();
                }

                // Hide modal after successful removal
                document.getElementById('remove-fave-modal').style.display = 'none';
            })
            .catch(error => {
                console.error('Error:', error);
                // Handle error
            });
    });

    document.getElementById('modal-no').addEventListener('click', () => {
        document.getElementById('remove-fave-modal').style.display = 'none';
    });

    document.querySelector('.w3-button.w3-display-topright').addEventListener('click', () => {
        document.getElementById('remove-fave-modal').style.display = 'none';
    });

         // Function to retrieve the anti-forgery token from the page
        function getAntiForgeryToken() {
            const tokenElement = document.querySelector('input[name="__RequestVerificationToken"]');
            return tokenElement ? tokenElement.value : '';
        }
</script>

