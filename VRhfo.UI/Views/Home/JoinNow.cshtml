    .hover-text {
        display: block;
        visibility: hidden;
        position: absolute;
        bottom: 20px;
        left: 0px;  
        color: #fff;
        padding: 10px 0px;
        border-radius: 5px;
        font-size: 16px;
        transition: left 0.8s ease;  
        
    }

    .card:hover .hover-text {
        display: block;
        left: 10px;
        visibility: visible;
    }

    .hover-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(228, 0, 58, 0.5); /* Transparent red overlay with 50% opacity */

        opacity: 0; /* Initially transparent */
        transition: opacity 0.3s ease; /* Smooth transition */
        border-radius: 10px 10px 0 0; /* Match card's border-radius */
    }

    .card:hover .hover-overlay {
        opacity: 1; /* Show overlay on hover */
    }
    .card:hover{
        cursor: pointer;
    }
  

