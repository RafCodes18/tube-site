@page
@{
    Layout = "";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wght@0,400;1,300&display=swap" rel="stylesheet">
<style>
    body {
        background-color: #333;
        color: #fff;
        text-align: center;
    }

    h2 {
        color: lightblue;
    }

    .main-page {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        font-family: "Raleway", sans-serif;
        font-size: 32px;
        font-weight: 700 !important;
    }

    .top-3-rows {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 20px;
    }

    .main-product-cards {
        flex: 1;
        display: flex;
        justify-content: center;
        gap: 20px;
    }

    .card {
        width: 280px;
        height: 400px;
        background-color: #444;
        color: #fff;
        display: flex;
        border-radius: 10px;
=    }

        .card img {
            width: 100%;
            height: 70%; /* Set the image height to 70% of the card */
            object-fit: cover; /* Maintain aspect ratio and cover the space */
            margin-top: -40px;
            border-radius: 10px;
        }


    .bottom-info-container {
        flex: 1;
    }

    .top-3-rows{
        flex-direction: column;
    }

    .choose-plan{
        margin-top: 10px;
    }
    .sit-logo{

        margin-top: -20px;
    }
</style>

<div class="main-page">

    <div class="top-3-rows">
        <img src="~/img/goonvr.png" height="60" width="240" class="sit-logo" />
        <p class="choose-plan">Choose Your Plan</p>
    </div>

    <div class="main-product-cards">
        <div class="card">
            <img src="~/img/one-month.png" />
            <p>fssf</p>
        </div>
        <div class="card">
            <p>fssf</p>
        </div>
        <div class="card">
            <p>fssf</p>
        </div>
        <div class="card">
            <p>fssf</p>
        </div>
    </div>

    <div class="bottom-info-container">
        <!-- Bottom information here -->
    </div>

</div>


