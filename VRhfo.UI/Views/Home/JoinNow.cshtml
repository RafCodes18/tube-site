        }

        .pricing-card {
            padding: 20px 15px;
            min-height: auto;
        }

        .premium-card {
            transform: none;
        }

            .premium-card:hover {
                transform: translateY(-5px);
            }

        .plan-name {
            font-size: 1.3rem;
