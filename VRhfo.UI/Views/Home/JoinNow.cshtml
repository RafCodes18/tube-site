        }

        .plan-ring {
            width: 18px;
            height: 18px;
            border-radius: 50%;
            border: 3px solid #888;
            box-shadow: none;
            flex-shrink: 0;
        }

        .basic-ring {
            border-color: #888;
        }

        .premium-ring {
            border-color: gold;
            box-shadow: 0 0 8px 1px gold;
        }

        .lifetime-ring {
            border: 3px solid transparent;
