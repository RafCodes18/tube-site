        }

            .faq-question::after {
                right: 1.5rem;
            }
        }
        .faq-item.active .faq-question::after {
            content: '×';
            transform: translateY(-50%);
        }

        .faq-answer-content {
            padding: 0 1.5rem 1.5rem 1.5rem;
            font-size: 0.95rem;
        }
        
    </style>
