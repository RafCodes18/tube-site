        }

        .price-period {
            font-size: 0.85rem;
        }

        .features li {
            padding: 5px 0;
            font-size: 0.8rem;
            padding-left: 20px;
        }

        .cta-button {
            padding: 12px 16px;
            font-size: 0.85rem;
        }

        }

        @@media (max-width: 768px) {
            .logo

        {
            font-size: 2rem;
        }

        .header h1 {
            font-size: 2rem;
        }

        .stats-bar {
            gap: 20px;
        }

        .stat-item {
            padding: 12px 20px;
        }

        .pricing-grid {
