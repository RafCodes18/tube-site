            .features {
                display: grid;
                grid-template-columns: 1fr 1fr;
                gap: 8px;
                margin-bottom: 20px;
            }

                .features li {
                     border-bottom: none;
                    font-size: 0.9rem;
                }
            .container
        {
            padding: 15px;
