<script>
    $("#registerForm").submit(function (e) {
        e.preventDefault();

        $.ajax({
            type: "POST",
            url: '/User/JoinNow',
            data: $(this).serialize(),
            success: function (response) {
                const toast = Toastify({
                    text: response.message,
                    duration: 3000,
                    close: true,
                    gravity: "top",
                    position: "right",
                    stopOnFocus: true,
                    style: {
                        background: response.success
                            ? "rgb(52, 197, 75)"
                            : "rgba(230, 30, 30, .7)",
                        position: "absolute",
                        overflow: "hidden"
                    },
                    onClick: function(){} // required for Toastify to return element
                }).showToast();

                // Add progress bar after toast is in DOM
                setTimeout(function() {
                    const toastEl = document.querySelector('.toastify');
                    if(toastEl) {
                        const progressBar = document.createElement('div');
                        progressBar.className = 'toastify-progress';
                        toastEl.appendChild(progressBar);
                    }
                }, 100);

                if (response.success && response.redirectUrl) {
                    setTimeout(function () {
                        window.location.href = response.redirectUrl;
                    }, 1500);
                }
            },
            error: function () {
                const toast = Toastify({
                    text: "Unexpected error occurred.",
                    duration: 3000,
                    close: true,
                    gravity: "top",
                    position: "right",
                    stopOnFocus: true,
                    style: {
                        background: "#E57373",
                        position: "relative",
                        overflow: "hidden"
                    },
                    onClick: function() {}
                }).showToast();

                setTimeout(function() {
                    const toastEl = document.querySelector('.toastify');
                    if(toastEl) {
                        const progressBar = document.createElement('div');
                        progressBar.className = 'toastify-progress';
                        toastEl.appendChild(progressBar);
                    }
                }, 100);
            }
        });
    });
</script>

