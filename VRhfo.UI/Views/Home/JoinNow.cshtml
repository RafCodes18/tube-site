<style>
    .hover-text {
        display: none;
        position: absolute;
        bottom: 20px;
        left: 0px; /* Initially position the text outside the card */
        color: #fff;
        padding: 10px;
        border-radius: 5px;
        font-size: 16px;
        transition: left 0.8s ease; /* Smooth transition for left property */
        
    }

    .card:hover .hover-text {
        display: block;
        left: 10px;
    }

    .hover-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5); /* Transparent black overlay */
        opacity: 0; /* Initially transparent */
        transition: opacity 0.3s ease; /* Smooth transition */
        border-radius: 10px; /* Match card's border-radius */
    }

    .card:hover .hover-overlay {
        opacity: 1; /* Show overlay on hover */
    }
    .card:hover{
        cursor: pointer;
    }
  

    @@media (max-width: 768px) {
        .main-product-cards {
            flex-direction: column; /* Change to column layout for smaller screens */
            align-items: center; /* Center-align cards in column layout */ 
        }

        .card {
            width: 100% !important  ; /* Make cards full width with some spacing */
            width: 560px !important;
            margin-bottom: 0px !important; /* Reduce bottom margin for spacing */
            margin-top: 0px !important;
            max-height: 120px;
           height: 90px !important;
        }

        .img-container{
            display: none;
        }

        .subscription-content{
            width: 100%;
        }

        .main-page{
            margin-top: 30px;
        }
    }

    .bottom-info-container {
        flex: 1;
    }

    .top-3-rows {
        flex-direction: column;
    }

    .choose-plan {
        margin-top: 10px;
        font-family: "Raleway", sans-serif !important;
        font-size: 32px;
        font-weight: 700 !important;
        margin-bottom: 5px;
        background-image: linear-gradient(to right,#B347FF, #FF2969);
        -webkit-background-clip: text;
