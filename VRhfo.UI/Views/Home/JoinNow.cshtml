        }
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: #0a0a0a;
            min-height: 100vh;
            padding: 40px 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            color: white;
        }

        .container {
            max-width: 1200px;
            width: 100%;
            text-align: center;
        }

        .logo {
            font-size: 2.5rem;
            font-weight: 800;
            margin-bottom: 20px;
            color: white;
        }

            .logo .stream {
                color: white;
            }

            .logo .vault {
                color: var(--primary-color);
            }

        .header {
            margin-bottom: -10px;
            color: white;
        }

            .header h1 {
                margin-top: 10px;
                font-family: "Raleway", sans-serif !important;
                font-size: 32px;
                font-weight: 700 !important;
                margin-bottom: 25px;
                /* background-image: linear-gradient(to right,#B347FF, #FF2969);*/
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-image: linear-gradient(to right, #666, #97a7b3);
            }

        .stats-bar {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-bottom: 40px;
            flex-wrap: wrap;
        }

        .stat-item {
            text-align: center;
            background: rgba(255, 255, 255, 0.1);
            padding: 15px 25px;
            border-radius: 10px;
            backdrop-filter: blur(10px);
        }

        .stat-number {
            font-size: 1.5rem;
            font-weight: 700;
            color: white;
            margin-bottom: 5px;
        }

        .stat-label {
            font-size: 0.9rem;
            color: #bbb;
        }

        .pricing-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 25px;
            margin-bottom: 40px;
            max-width: 1000px;
            margin-left: auto;
            margin-right: auto;
        }

        .pricing-card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(20px);
            border-radius: 15px;
            padding: 30px 20px;
            position: relative;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            min-height: 450px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            color: white;
        }

            .pricing-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
            }

        .premium-card {
            background: linear-gradient(135deg, #333333 0%, #1a1a1a 100%);
            transform: scale(1.05);
            border: 1px solid var(--primary-color);
        }

            .premium-card:hover {
                transform: scale(1.05) translateY(-10px);
            }

        .popular-badge {
            position: absolute;
            top: -12px;
            left: 50%;
            transform: translateX(-50%);
            background: var(--primary-color);
            color: #000;
            padding: 6px 20px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .card-content {
            flex-grow: 1;
        }

        .plan-name {
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 10px;
            color: white;
        }

        .plan-subtitle {
            font-size: 1rem;
            color: #bbb;
            margin-bottom: 20px;
        }

        .price-section {
            margin-bottom: 25px;
        }

        .original-price {
            font-size: 1rem;
            color: #888;
            text-decoration: line-through;
            margin-bottom: 5px;
        }

        .price {
            font-size: 2.5rem;
            font-weight: 800;
            color: var(--primary-color);
            margin-bottom: 5px;
        }

        .price-period {
            font-size: 1rem;
            color: #bbb;
        }

        .features {
            list-style: none;
            margin-bottom: 30px;
            text-align: left;
        }

            .features li {
                padding: 8px 0;
                color: #ddd;
                font-size: 0.95rem;
                position: relative;
                padding-left: 25px;
            }

                .features li::before {
                    content: "✓";
                    position: absolute;
                    left: 0;
                    color: var(--primary-color);
                    font-weight: bold;
                    font-size: 1.1rem;
                }

        .cta-button {
            width: 100%;
            padding: 15px 20px;
            background: var(--primary-color);
            color: #000;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-top: auto;
        }

            .cta-button:hover {
                background: var(--join-now-hover);
                transform: translateY(-2px);
            }

        .basic-card .cta-button {
            background: var(--primary-color);
            color: #000;
            border: 2px solid var(--primary-color);
        }

            .basic-card .cta-button:hover {
                background: #6bdd00;
                color: #000;
            }

        .user-stats {
            margin: 40px 0;
            padding: 20px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 10px;
            backdrop-filter: blur(10px);
        }

            .user-stats h3 {
                color: #bbb;
                margin-bottom: 10px;
                font-size: 1.2rem;
            }

        .trust-section {
            margin: 30px 0;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            color: #00cc44;
            font-size: 0.95rem;
            font-weight: bold;
        }

            .trust-section::before {
                content: "✓";
                background: #00cc44;
                color: #000;
                border-radius: 50%;
                width: 20px;
                height: 20px;
                display: flex;
                align-items: center;
                justify-content: center;
                font-weight: bold;
                font-size: 0.8rem;
            }

        .credit-cards {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
            flex-wrap: wrap;
        }

        .credit-card {
            background: rgba(255, 255, 255, 0.1);
            padding: 10px 20px;
            border-radius: 8px;
            font-size: 0.9rem;
            color: #bbb;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .account-creation {
            display: none;
            max-width: 480px;
            margin: 0 auto;
            background: #191919;
            backdrop-filter: blur(20px);
            border-radius: 15px;
            padding: 40px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            animation: slideUp 0.6s ease-out;
        }

            .account-creation.show {
                display: block;
            }

        .selected-plan-summary {
            background: rgba(127, 255, 0, 0.1);
            border: 1px solid rgba(127, 255, 0, 0.3);
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 30px;
            text-align: center;
        }

            .selected-plan-summary h3 {
                color: var(--primary-color);
                font-size: 1.5rem;
                margin-bottom: 10px;
            }

            .selected-plan-summary .price {
                font-size: 2rem;
                color: var(--primary-color);
                font-weight: 800;
            }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

            .form-group label {
                display: block;
                margin-bottom: 8px;
                color: #ddd;
                font-weight: 500;
            }

            .form-group input {
                width: 100%;
                padding: 12px 16px;
                background: rgba(255, 255, 255, 0.1);
                border: 1px solid rgba(255, 255, 255, 0.2);
                border-radius: 8px;
                color: white;
                font-size: 1rem;
                transition: all 0.3s ease;
            }

                .form-group input:focus {
                    outline: none;
                    border-color: var(--primary-color);
                    background: rgba(255, 255, 255, 0.15);
                }

                .form-group input::placeholder {
                    color: #888;
                }

        .back-button {
            background: transparent;
            color: var(--primary-color);
            border: 2px solid var(--primary-color);
            padding: 10px 20px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 0.9rem;
            margin-right: 15px;
            transition: all 0.3s ease;
        }

            .back-button:hover {
                background: rgba(127, 255, 0, 0.1);
            }

        .pricing-grid.hidden {
            display: none;
        }

        .stats-bar.hidden,
        .user-stats.hidden,
        .trust-section.hidden,
        .credit-cards.hidden {
            display: none;
        }

        @@keyframes slideUp {
            from

        {
            opacity: 0;
            transform: translateY(50px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        @@media (max-width: 1000px) {
            .container

        {
            max-width: 100%;
        }

        .stats-bar {
            gap: 30px;
        }

        .pricing-grid {
            grid-template-columns: 1fr 1fr 1fr;
            gap: 15px;
