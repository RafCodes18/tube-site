    body {
        background-color: #222;
        text-align: center;
        font-family: 'Open Sans', Arial, sans-serif;
        font-size: 14px;
        line-height: 24px;
    }

    h2 {
        color: black;
    }

    .main-page {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        margin-top: 50px !important;
        height: 100vh; /* Keep the container at full viewport height */
    }

    .top-3-rows {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 0px !important;
    }

    .main-product-cards {
        flex: 1;
        display: flex;
        justify-content: center;
        gap: 20px; /* Initial gap between cards */
         margin: 0 auto; /* Center-align cards */
        max-width: 100%; /* Make the container take up the full available width */
    }

    .card {
        width: 280px; /* Set width of each card */
        height: 380px;
        background-color: white;
        color: black;
        display: flex;
        border-radius: 10px;
        margin-bottom: 20px; /* Add bottom margin to each card */
        display: flex; 
        flex-direction: column;
