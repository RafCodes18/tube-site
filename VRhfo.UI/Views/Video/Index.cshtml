@model IEnumerable<VRhfo.BL.Models.Video>

@{
    ViewData["Title"] = "Video Gallery";
}
<style>
    .card-container {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 10px;
        justify-content: center;
        margin-top: 70px;
        margin-left: 0;
    }

    .card {
        border-radius: 4px;
        padding: 10px;
        text-align: center;
        width: 320px;
        height: 280px;
        margin:0; 
        padding: 0;
        margin-top: 20px;
    }

    .vid-img{
        height: 270px;
    }

    .description{
    background-color: black;
    max-height: 20px;
    padding: 0;
    margin: 0;
    }

</style>

<div class="card-container">
    @foreach (var item in Model)
    {
        <div class="card">
            <a href="@item.VideoUrl">
                <img class="vid-img" src="~/img/@item.ThumbnailUrl" alt="@item.Title" style="width: 100%;">
            </a>
            <div class="description">
                <h4>@item.Title</h4>
                <p>@item.Studio</p>
                <p>@item.Description</p>
                <a href="@item.VideoUrl"></a>
            </div>
        </div>
    }
</div>
