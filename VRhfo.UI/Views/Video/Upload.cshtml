<div class="learn-card">
    <div class="content">
        <div class="outline-box" id="droppable-area">
            <div class="top-row">
                <img src="~/img/upload.png" height="60px" width="65px" />
                <p>Upload Video</p>
                <span class="small-txt">Drag and drop here or <a href="#">Browse</a></span>
            </div>
        </div>
            <p class="feature-update">Due to current server restrictions, please ensure videos do not exceed 2GB. All video uploads are reviewed before going public. By uploading you agree to all  <a href="#">Terms and Conditions.</a> </p>             
    </div>
</div>

<script type="text/javascript">

    // Get the droppable area
    const droppableArea = document.getElementById('droppable-area');

    // Prevent default behavior on dragover to allow dropping files
    droppableArea.addEventListener('dragover', (event) => {
        event.preventDefault();
    });

    // Handle the file drop event
    droppableArea.addEventListener('drop', (event) => {
        event.preventDefault();

        const files = event.dataTransfer.files;
        handleFileUpload(files);
    });

    // Optional: Handle file upload when using the Browse link
    document.getElementById('browse-link').addEventListener('click', (event) => {
        event.preventDefault();

        // Trigger file input click event
        const fileInput = document.createElement('input');
        fileInput.type = 'file';
        fileInput.accept = 'video/*'; // Accept only video files
        fileInput.click();

        fileInput.addEventListener('change', () => {
            handleFileUpload(fileInput.files);
        });
    });

    // Function to handle file upload
    function handleFileUpload(files) {
        for (let i = 0; i < files.length; i++) {
            const file = files[i];
            const fileType = file.type.split('/')[0]; // Get the file type (e.g., 'video', 'image', 'application')

            if (fileType === 'video') {
                // Handle the uploaded video file here (e.g., send it to the server)
                console.log('Uploaded video file:', file);
            } else {
                // Display an error message or do nothing if the file type is not a video
                console.log('Error: Only video files are allowed.');
            }
        }
    }

</script>                